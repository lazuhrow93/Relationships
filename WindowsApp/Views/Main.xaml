<Window x:Class="WindowsApp.Views.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Main" Height="450" Width="500"
        MinHeight="450" MinWidth="500">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <!-- Top section (DataGrid) -->
            <RowDefinition Height="1*" />
            <!-- Bottom section (future buttons etc.) -->
        </Grid.RowDefinitions>

        <DataGrid 
            Grid.Row="0"
            ItemsSource="{Binding UserCharacters}"
            AutoGenerateColumns="False"
            Margin="0,0,0,10"
            Padding="10"
            HeadersVisibility="Column"
            HorizontalAlignment="Stretch"
            HorizontalScrollBarVisibility="Auto">
            <DataGrid.Columns>
                <DataGridTextColumn 
                    Header="Character" 
                    Width="*"
                    Binding="{Binding CharacterName}" />
                <DataGridTextColumn 
                    Header="Connections" 
                    Width="*"
                    Binding="{Binding TotalConnections}" />
            </DataGrid.Columns>
        </DataGrid>

        <Grid Grid.Row="1" VerticalAlignment="Center">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <!-- Label -->
                    <ColumnDefinition Width="3*"/>
                    <!-- ComboBox -->
                    <ColumnDefinition Width="3*"/>
                    <!-- Submit Button -->
                </Grid.ColumnDefinitions>

                <!-- ROW 0 -->
                <Label Grid.Row ="0" 
                       Grid.Column="0"
                       Content="View Connections:"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0" />
                <ComboBox Grid.Row ="0" 
                          Grid.Column="1"
                          ItemsSource="{Binding UserCharacters}"
                          DisplayMemberPath="CharacterName"
                          SelectedItem="{Binding SelectedCharacter}"
                          Margin="5"
                          VerticalAlignment="Center"/>
                <Button Grid.Row ="0" 
                        Grid.Column="2"
                        Content="Submit"
                        Command="{Binding ViewCharacterConnectionsCommand}"
                        VerticalAlignment="Center"
                        Margin="5" />

                <!-- ROW 1 -->
                <Label Grid.Row ="1"
                       Grid.Column="0"
                       Content="Add Character"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0" />
                <Button Grid.Row ="1"
                        Grid.Column="1"
                        Content="Add"
                        VerticalAlignment="Center"
                        Margin="5"
                        Command ="{Binding AddCharacter}"/>
                
                <!-- Row 2-->
                <Button
                    Grid.Row="2"
                    Grid.ColumnSpan="3"
                    Content="Refresh Window"
                    Command="{Binding RefreshWindowCommand}"
                    Margin="5"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
