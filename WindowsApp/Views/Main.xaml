<Window x:Class="WindowsApp.Views.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Main" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <!-- Top section (DataGrid) -->
            <RowDefinition Height="1*" />
            <!-- Bottom section (future buttons etc.) -->
        </Grid.RowDefinitions>

        <DataGrid 
            Grid.Row="0"
            ItemsSource="{Binding UserCharacters}"
            AutoGenerateColumns="False"
            Margin="0,0,0,10"
            Padding="10"
            HeadersVisibility="Column"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
            <DataGrid.Columns>
                <DataGridTextColumn Header="UserId" Binding="{Binding UserId}" />
                <DataGridTextColumn Header="CharacterName" Binding="{Binding CharacterName}" />
                <DataGridTextColumn Header="Connections" Binding="{Binding Connections}" />
            </DataGrid.Columns>
        </DataGrid>

        <Grid Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center">
            <!-- Define two columns in the inner grid: one for the label, one for the button -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <!-- For the Label -->
                <ColumnDefinition Width="Auto" />
                <!-- For the Button -->
            </Grid.ColumnDefinitions>

            <!-- Label "Add Character" -->
            <Label Grid.Column="0"
                   Content="Add Character"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Right"
                   Margin="0,0,10,0" />

            <!-- Plus Button -->
            <Button Grid.Column="1"
                    Content="+"
                    FontSize="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Width="40"
                    Height="40"
                    Padding="0"
                    Background="LightGray"
                    BorderBrush="DarkGray"
                    BorderThickness="1" 
                    Command ="{Binding AddCharacter}"/>
        </Grid>
    </Grid>
</Window>
