<Window x:Class="WindowsApp.Views.ConnectionsForCharacter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowsApp.Views"
        mc:Ignorable="d"
        Title="ConnectionsForCharacter" Height="450" Width="800">
    <Grid Margin ="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <DataGrid
            Grid.Row="0"
            ItemsSource="{Binding ConnectedCharacters}"
            AutoGenerateColumns="False"
            Margin="0,0,0,10"
            Padding="10"
            HeadersVisibility="Column"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
            <DataGrid.Columns>
                <DataGridTextColumn Header="CharacterName" Binding="{Binding CharacterName}" />
                <DataGridTextColumn Header="Relation" Binding="{Binding ConnectionDescription}" />
            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Content="{Binding ConnectCharacterToLabel}"/>

                <ComboBox Grid.Row="1"
                          Margin="4"
                          ItemsSource="{Binding DisconnectedCharacters}"
                          DisplayMemberPath="CharacterName"/>
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0">
                        Relation:
                    </Label>
                    <ComboBox Grid.Column="1" 
                              Margin="4"
                              ItemsSource="{Binding RelationTypes}"
                              DisplayMemberPath="Name"></ComboBox>
                </Grid>

            </Grid>
            
        </Grid>
    </Grid>
</Window>
